<%- include('../partials/header') %>

<div class="pt-20 pb-12 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4">
        <!-- Page Header -->
        <div class="bg-white rounded-2xl shadow-lg p-8 mb-8">
            <div class="flex items-center justify-between mb-6">
                <h1 class="text-3xl font-bold text-gray-800">
                    <i class="fas fa-car text-primary mr-3"></i>My Rides
                </h1>
                <a href="/rides/post" class="bg-primary hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition">
                    <i class="fas fa-plus-circle mr-2"></i>Post New Ride
                </a>
            </div>

            <!-- Status Filter Tabs -->
            <div class="flex flex-wrap gap-2">
                <a href="/rides/my-rides?status=all" 
                    class="px-6 py-2 rounded-lg font-semibold transition <%= currentStatus === 'all' ? 'bg-primary text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                    All Rides
                </a>
                <a href="/rides/my-rides?status=active" 
                    class="px-6 py-2 rounded-lg font-semibold transition <%= currentStatus === 'active' ? 'bg-green-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                    <i class="fas fa-check-circle mr-2"></i>Active
                </a>
                <a href="/rides/my-rides?status=in-progress" 
                    class="px-6 py-2 rounded-lg font-semibold transition <%= currentStatus === 'in-progress' ? 'bg-blue-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                    <i class="fas fa-route mr-2"></i>In Progress
                </a>
                <a href="/rides/my-rides?status=completed" 
                    class="px-6 py-2 rounded-lg font-semibold transition <%= currentStatus === 'completed' ? 'bg-purple-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                    <i class="fas fa-flag-checkered mr-2"></i>Completed
                </a>
                <a href="/rides/my-rides?status=cancelled" 
                    class="px-6 py-2 rounded-lg font-semibold transition <%= currentStatus === 'cancelled' ? 'bg-red-500 text-white' : 'bg-gray-100 text-gray-700 hover:bg-gray-200' %>">
                    <i class="fas fa-times-circle mr-2"></i>Cancelled
                </a>
            </div>
        </div>

        <!-- Rides List -->
        <div class="space-y-6">
            <% if (rides.length === 0) { %>
                <!-- Empty State -->
                <div class="bg-white rounded-2xl shadow-lg p-12 text-center">
                    <i class="fas fa-car-side text-gray-300 text-6xl mb-4"></i>
                    <h3 class="text-xl font-semibold text-gray-600 mb-2">No rides found</h3>
                    <p class="text-gray-500 mb-6">
                        <% if (currentStatus === 'all') { %>
                            You haven't posted any rides yet
                        <% } else { %>
                            No <%= currentStatus %> rides at the moment
                        <% } %>
                    </p>
                    <a href="/rides/post" class="inline-block bg-primary hover:bg-green-700 text-white px-6 py-3 rounded-lg font-semibold transition">
                        <i class="fas fa-plus-circle mr-2"></i>Post Your First Ride
                    </a>
                </div>
            <% } else { %>
                <!-- Ride Cards -->
                <% rides.forEach(ride => { %>
                    <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition p-6">
                        <div class="flex items-start justify-between mb-4">
                            <!-- Status Badge -->
                            <div>
                                <% 
                                let statusClass = 'bg-gray-100 text-gray-700';
                                let statusIcon = 'fas fa-question-circle';
                                
                                switch(ride.status) {
                                    case 'ACTIVE':
                                        statusClass = 'bg-green-100 text-green-700';
                                        statusIcon = 'fas fa-check-circle';
                                        break;
                                    case 'IN_PROGRESS':
                                        statusClass = 'bg-blue-100 text-blue-700';
                                        statusIcon = 'fas fa-route';
                                        break;
                                    case 'COMPLETED':
                                        statusClass = 'bg-purple-100 text-purple-700';
                                        statusIcon = 'fas fa-flag-checkered';
                                        break;
                                    case 'CANCELLED':
                                        statusClass = 'bg-red-100 text-red-700';
                                        statusIcon = 'fas fa-times-circle';
                                        break;
                                }
                                %>
                                <span class="<%= statusClass %> px-4 py-2 rounded-full text-sm font-semibold inline-block">
                                    <i class="<%= statusIcon %> mr-2"></i><%= ride.status.replace('_', ' ') %>
                                </span>
                                
                                <!-- Preference Badges -->
                                <div class="flex flex-wrap gap-2 mt-2">
                                    <% if (ride.preferences?.autoAcceptBookings) { %>
                                        <span class="bg-blue-100 text-blue-700 px-3 py-1 rounded-full text-xs font-semibold">
                                            <i class="fas fa-bolt mr-1"></i>Auto-Approve
                                        </span>
                                    <% } %>
                                    <% if (ride.preferences?.gender === 'FEMALE_ONLY') { %>
                                        <span class="bg-pink-100 text-pink-700 px-3 py-1 rounded-full text-xs font-semibold">
                                            <i class="fas fa-female mr-1"></i>Ladies Only
                                        </span>
                                    <% } %>
                                </div>
                                
                                <p class="text-gray-500 text-sm mt-2">
                                    <%= new Date(ride.schedule?.departureDateTime || ride.schedule?.date).toLocaleString('en-US', { 
                                        weekday: 'short', 
                                        month: 'short', 
                                        day: 'numeric',
                                        hour: '2-digit',
                                        minute: '2-digit'
                                    }) %>
                                </p>
                                <% if (ride.vehicle && ride.vehicle.make) { %>
                                    <p class="text-gray-700 text-sm mt-2 font-medium">
                                        <i class="fas fa-car text-primary mr-1"></i>
                                        <%= ride.vehicle.make %> <%= ride.vehicle.model %>
                                        <% if (ride.vehicle.licensePlate) { %>
                                            <span class="text-gray-500 ml-1">(<%= ride.vehicle.licensePlate %>)</span>
                                        <% } %>
                                    </p>
                                <% } else { %>
                                    <p class="text-gray-400 text-xs mt-2">
                                        <i class="fas fa-exclamation-circle mr-1"></i>
                                        Vehicle info unavailable
                                    </p>
                                <% } %>
                            </div>

                            <!-- Earnings & Bookings -->
                            <div class="text-right">
                                <div class="text-2xl font-bold text-primary mb-1">₹<%= ride.pricing?.totalEarnings || 0 %></div>
                                <p class="text-gray-600 text-sm">
                                    <%= ride.bookings?.filter(b => b.status === 'CONFIRMED' || b.status === 'COMPLETED').length || 0 %> / <%= ride.pricing?.totalSeats || ride.totalSeats || 0 %> seats booked
                                </p>
                            </div>
                        </div>

                        <!-- Route -->
                        <div class="border-t border-b py-4 mb-4">
                            <div class="space-y-2">
                                <div class="flex items-center text-gray-700">
                                    <i class="fas fa-map-marker-alt text-green-600 w-6"></i>
                                    <span class="ml-2 font-medium"><%= ride.route?.start?.name || ride.route?.start?.address || 'N/A' %></span>
                                </div>
                                <div class="flex items-center text-gray-400 ml-6">
                                    <i class="fas fa-ellipsis-v"></i>
                                    <span class="ml-3 text-sm">
                                        <%= ride.route?.distance ? ride.route.distance.toFixed(1) + ' km' : 'Calculating...' %>
                                        <% if (ride.route?.duration) { %>
                                            • <%= Math.round(ride.route.duration) %> mins
                                        <% } %>
                                    </span>
                                </div>
                                <div class="flex items-center text-gray-700">
                                    <i class="fas fa-map-marker-alt text-red-600 w-6"></i>
                                    <span class="ml-2 font-medium"><%= ride.route?.destination?.name || ride.route?.destination?.address || 'N/A' %></span>
                                </div>
                            </div>
                        </div>

                        <!-- Ride Details -->
                        <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-4 text-sm">
                            <div class="text-gray-600">
                                <i class="fas fa-users text-primary mr-2"></i>
                                <%= ride.pricing?.availableSeats || 0 %> seats available
                            </div>
                            <div class="text-gray-600">
                                <i class="fas fa-rupee-sign text-primary mr-2"></i>
                                ₹<%= ride.pricing?.pricePerSeat || 0 %> per seat
                            </div>
                            <% if (ride.vehicle && ride.vehicle.make) { %>
                                <div class="text-gray-800 font-semibold">
                                    <i class="fas fa-car text-primary mr-2"></i>
                                    <%= ride.vehicle.make %> <%= ride.vehicle.model %>
                                </div>
                            <% } else { %>
                                <div class="text-gray-400">
                                    <i class="fas fa-car text-gray-400 mr-2"></i>
                                    Vehicle info unavailable
                                </div>
                            <% } %>
                            <% if (ride.carbon?.carbonSaved) { %>
                                <div class="text-green-600">
                                    <i class="fas fa-leaf mr-2"></i>
                                    <%= ride.carbon.carbonSaved.toFixed(1) %> kg CO₂
                                </div>
                            <% } %>
                        </div>

                        <!-- Booking Requests (Only show if NOT auto-accept) -->
                        <% const pendingRequests = (ride.bookings || []).filter(b => b.status === 'PENDING'); %>
                        <% if (!ride.preferences?.autoAcceptBookings && pendingRequests.length > 0) { %>
                            <div class="border-t pt-4 mb-4">
                                <h4 class="font-semibold text-gray-800 mb-3">
                                    <i class="fas fa-user-clock text-orange-500 mr-2"></i>
                                    Pending Requests (<%= pendingRequests.length %>)
                                </h4>
                                <div class="space-y-2">
                                    <% pendingRequests.forEach(booking => { %>
                                        <% if (booking.passenger) { %>
                                            <div class="flex items-center justify-between bg-orange-50 px-4 py-3 rounded-lg">
                                                <div class="flex items-center space-x-3">
                                                    <img src="<%= booking.passenger.profilePhoto || '/images/default-avatar.png' %>" 
                                                        class="w-10 h-10 rounded-full" 
                                                        alt="<%= getUserName(booking.passenger) %>">
                                                    <div>
                                                        <p class="font-medium text-gray-800"><%= getUserName(booking.passenger) %></p>
                                                        <p class="text-sm text-gray-600">
                                                            <%= booking.seatsBooked %> seat<%= booking.seatsBooked > 1 ? 's' : '' %> • 
                                                            ₹<%= booking.totalPrice %>
                                                        </p>
                                                    </div>
                                                </div>
                                                <div class="flex gap-2">
                                                    <button onclick="acceptBooking('<%= booking._id %>')" 
                                                        class="px-4 py-2 bg-green-500 hover:bg-green-600 text-white rounded-lg text-sm font-semibold transition">
                                                        <i class="fas fa-check mr-1"></i>Accept
                                                    </button>
                                                    <button onclick="rejectBooking('<%= booking._id %>')" 
                                                        class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg text-sm font-semibold transition">
                                                        <i class="fas fa-times mr-1"></i>Reject
                                                    </button>
                                                </div>
                                            </div>
                                        <% } %>
                                    <% }); %>
                                </div>
                            </div>
                        <% } %>

                        <!-- Confirmed Passengers -->
                        <% const confirmedBookings = (ride.bookings || []).filter(b => b.status === 'CONFIRMED' || b.status === 'COMPLETED'); %>
                        <% if (confirmedBookings.length > 0) { %>
                            <div class="border-t pt-4 mb-4">
                                <h4 class="font-semibold text-gray-800 mb-3">
                                    <i class="fas fa-users text-green-600 mr-2"></i>
                                    Confirmed Passengers (<%= confirmedBookings.length %>)
                                </h4>
                                <div class="flex flex-wrap gap-2">
                                    <% confirmedBookings.forEach(booking => { %>
                                        <% if (booking.passenger) { %>
                                            <div class="flex items-center space-x-2 bg-green-50 px-3 py-2 rounded-lg">
                                                <img src="<%= booking.passenger.profilePhoto || '/images/default-avatar.png' %>" 
                                                    class="w-8 h-8 rounded-full" 
                                                    alt="<%= getUserName(booking.passenger) %>">
                                                <span class="text-sm font-medium"><%= getUserName(booking.passenger) %></span>
                                                <% if (booking.seatsBooked > 1) { %>
                                                    <span class="text-xs bg-green-600 text-white px-2 py-1 rounded">
                                                        <%= booking.seatsBooked %> seats
                                                    </span>
                                                <% } %>
                                            </div>
                                        <% } %>
                                    <% }); %>
                                </div>
                            </div>
                        <% } %>

                        <!-- Actions -->
                        <div class="border-t pt-4 flex flex-wrap gap-3">
                            <a href="/rides/<%= ride._id %>" 
                                class="px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg font-semibold transition">
                                <i class="fas fa-eye mr-2"></i>View Details
                            </a>

                            <% if (ride.status === 'ACTIVE') { %>
                                <% 
                                // Count all bookings (pending, confirmed, etc.) except cancelled/rejected
                                const activeBookings = (ride.bookings || []).filter(b => 
                                    !['CANCELLED', 'REJECTED', 'EXPIRED'].includes(b.status)
                                );
                                const hasBookings = activeBookings.length > 0;
                                %>
                                
                                <% if (!hasBookings) { %>
                                    <!-- Edit and Delete only if no bookings -->
                                    <a href="/rides/<%= ride._id %>/edit" 
                                        class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-semibold transition">
                                        <i class="fas fa-edit mr-2"></i>Edit
                                    </a>
                                    <button onclick="deleteRide('<%= ride._id %>')" 
                                        class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg font-semibold transition">
                                        <i class="fas fa-trash mr-2"></i>Delete
                                    </button>
                                <% } else { %>
                                    <!-- If has bookings, show info message -->
                                    <span class="px-4 py-2 bg-gray-100 text-gray-600 rounded-lg text-sm">
                                        <i class="fas fa-info-circle mr-2"></i>
                                        Cannot edit/delete with active bookings
                                    </span>
                                <% } %>
                            <% } %>

                            <% if (ride.bookings && ride.bookings.length > 0) { %>
                                <a href="/chat/<%= ride._id %>" 
                                    class="px-4 py-2 bg-blue-500 hover:bg-blue-600 text-white rounded-lg font-semibold transition">
                                    <i class="fas fa-comments mr-2"></i>Chat
                                </a>
                            <% } %>
                        </div>

                        <!-- Created Time -->
                        <p class="text-gray-400 text-xs mt-4">
                            <i class="fas fa-clock mr-1"></i>
                            Posted <%= new Date(ride.createdAt).toLocaleString() %>
                        </p>
                    </div>
                <% }); %>

                <!-- Pagination -->
                <% if (pagination.totalPages > 1) { %>
                    <div class="flex justify-center items-center space-x-2 mt-8">
                        <% if (pagination.hasPrevPage) { %>
                            <a href="?status=<%= currentStatus %>&page=<%= pagination.currentPage - 1 %>" 
                                class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                                <i class="fas fa-chevron-left"></i>
                            </a>
                        <% } %>

                        <% for(let i = 1; i <= pagination.totalPages; i++) { %>
                            <% if (i === pagination.currentPage) { %>
                                <span class="px-4 py-2 bg-primary text-white rounded-lg font-semibold">
                                    <%= i %>
                                </span>
                            <% } else if (i === 1 || i === pagination.totalPages || (i >= pagination.currentPage - 1 && i <= pagination.currentPage + 1)) { %>
                                <a href="?status=<%= currentStatus %>&page=<%= i %>" 
                                    class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                                    <%= i %>
                                </a>
                            <% } else if (i === pagination.currentPage - 2 || i === pagination.currentPage + 2) { %>
                                <span class="px-4 py-2">...</span>
                            <% } %>
                        <% } %>

                        <% if (pagination.hasNextPage) { %>
                            <a href="?status=<%= currentStatus %>&page=<%= pagination.currentPage + 1 %>" 
                                class="px-4 py-2 bg-white border border-gray-300 rounded-lg hover:bg-gray-50 transition">
                                <i class="fas fa-chevron-right"></i>
                            </a>
                        <% } %>
                    </div>
                <% } %>
            <% } %>
        </div>
    </div>
</div>

<script>
async function acceptBooking(bookingId) {
    if (!confirm('Accept this booking request?')) return;
    
    try {
        const response = await fetch(`/bookings/${bookingId}/accept`, { 
            method: 'POST',
            headers: { 'Content-Type': 'application/json' }
        });
        if (response.ok) {
            LANEApp.showAlert('Booking accepted successfully', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            const error = await response.json();
            LANEApp.showAlert(error.message || 'Failed to accept booking', 'error');
        }
    } catch (error) {
        LANEApp.showAlert('Failed to accept booking', 'error');
    }
}

async function rejectBooking(bookingId) {
    const reason = prompt('Reason for rejection (optional):');
    if (reason === null) return; // User cancelled
    
    try {
        const response = await fetch(`/bookings/${bookingId}/reject`, { 
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({ reason: reason || 'No reason provided' })
        });
        if (response.ok) {
            LANEApp.showAlert('Booking rejected', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            const error = await response.json();
            LANEApp.showAlert(error.message || 'Failed to reject booking', 'error');
        }
    } catch (error) {
        LANEApp.showAlert('Failed to reject booking', 'error');
    }
}

async function deleteRide(rideId) {
    if (!confirm('Are you sure you want to delete this ride? This action cannot be undone.')) return;
    
    try {
        const response = await fetch(`/rides/${rideId}`, { 
            method: 'DELETE',
            headers: { 'Content-Type': 'application/json' }
        });
        if (response.ok) {
            LANEApp.showAlert('Ride deleted successfully', 'success');
            setTimeout(() => location.reload(), 1500);
        } else {
            const error = await response.json();
            LANEApp.showAlert(error.message || 'Failed to delete ride', 'error');
        }
    } catch (error) {
        LANEApp.showAlert('Failed to delete ride', 'error');
    }
}
</script>

<%- include('../partials/footer') %>
