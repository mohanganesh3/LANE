<%- include('../partials/header') %>

<div class="pt-16 min-h-screen flex items-center justify-center bg-gradient-to-br from-green-50 to-blue-50 py-12">
    <div class="max-w-md w-full mx-4">
        <div class="bg-white rounded-2xl shadow-2xl p-8">
            <!-- Back Button -->
            <div class="mb-6">
                <a href="/auth/login" class="inline-flex items-center text-gray-600 hover:text-primary transition-colors">
                    <i class="fas fa-arrow-left mr-2"></i>
                    <span>Back to Login</span>
                </a>
            </div>

            <!-- Logo & Title -->
            <div class="text-center mb-8">
                <div class="flex items-center justify-center mb-4">
                    <div class="w-16 h-16 bg-gradient-to-br from-primary to-green-600 rounded-full flex items-center justify-center">
                        <i class="fas fa-lock text-white text-2xl"></i>
                    </div>
                </div>
                <h2 class="text-2xl font-bold text-gray-800 mb-2">Forgot Password?</h2>
                <p class="text-gray-600 text-sm">No worries! Enter your email and we'll send you a reset code.</p>
            </div>
            
            <!-- Alert Messages -->
            <% if (typeof success !== 'undefined' && success && success.length) { %>
            <div class="mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded">
                <div class="flex items-start">
                    <i class="fas fa-check-circle text-green-500 mt-0.5 mr-3"></i>
                    <div>
                        <p class="text-green-800 font-semibold"><%= success[0] %></p>
                    </div>
                </div>
            </div>
            <% } %>
            <% if (typeof error !== 'undefined' && error && error.length) { %>
            <div class="mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded">
                <div class="flex items-start">
                    <i class="fas fa-exclamation-circle text-red-500 mt-0.5 mr-3"></i>
                    <div>
                        <p class="text-red-800 font-semibold"><%= error[0] %></p>
                    </div>
                </div>
            </div>
            <% } %>
            <div id="alertMessage" class="hidden mb-6"></div>
            
            <!-- Forgot Password Form -->
            <form id="forgotPasswordForm" class="space-y-6" method="POST" action="/auth/forgot-password">
                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-envelope mr-1 text-primary"></i>
                        Email Address
                    </label>
                    <div class="relative">
                        <input type="email" name="email" id="email" required 
                            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent transition-all"
                            placeholder="Enter your registered email"
                            value="<%= typeof email !== 'undefined' ? email : '' %>"
                            autocomplete="email">
                    </div>
                    <p class="mt-2 text-xs text-gray-500">
                        <i class="fas fa-info-circle mr-1"></i>
                        Enter the email you used to register your account
                    </p>
                </div>
                
                <button type="submit" id="submitBtn"
                    class="w-full bg-gradient-to-r from-primary to-green-600 text-white py-3 rounded-lg hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 font-semibold flex items-center justify-center">
                    <i class="fas fa-paper-plane mr-2"></i>
                    Send Reset Code
                </button>
            </form>
            
            <!-- Help Text -->
            <div class="mt-6 pt-6 border-t border-gray-200">
                <div class="bg-blue-50 border-l-4 border-blue-500 p-4 rounded">
                    <div class="flex">
                        <div class="flex-shrink-0">
                            <i class="fas fa-info-circle text-blue-500"></i>
                        </div>
                        <div class="ml-3">
                            <p class="text-sm text-blue-700">
                                <strong>What happens next?</strong>
                            </p>
                            <ul class="mt-2 text-xs text-blue-600 space-y-1">
                                <li>‚Ä¢ You'll receive a 6-digit code via email</li>
                                <li>‚Ä¢ The code is valid for 10 minutes</li>
                                <li>‚Ä¢ Enter the code on the next page to reset your password</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Additional Help -->
            <div class="mt-6 text-center">
                <p class="text-sm text-gray-600">
                    Remember your password?
                    <a href="/auth/login" class="text-primary hover:text-green-600 font-semibold">
                        Login here
                    </a>
                </p>
            </div>
        </div>

        <!-- Security Notice -->
        <div class="mt-6 text-center">
            <p class="text-xs text-gray-500 flex items-center justify-center">
                <i class="fas fa-shield-alt mr-2"></i>
                Your security is our priority. We'll never ask for your password via email.
            </p>
        </div>
    </div>
</div>

<script>
console.log('üöÄ [Forgot Password] Script loaded!');

// Wait for DOM to be fully loaded
document.addEventListener('DOMContentLoaded', function() {
    console.log('üîµ [Forgot Password] Page loaded, attaching event listener');
    
    const form = document.getElementById('forgotPasswordForm');
    const submitBtn = document.getElementById('submitBtn');
    const alertMessage = document.getElementById('alertMessage');
    
    if (!form) {
        console.error('‚ùå [Forgot Password] Form not found!');
        return;
    }
    
    if (!submitBtn) {
        console.error('‚ùå [Forgot Password] Submit button not found!');
        return;
    }
    
    console.log('‚úÖ [Forgot Password] Form found, attaching listener');
    console.log('‚úÖ [Forgot Password] Submit button found');
    
    form.addEventListener('submit', async (e) => {
        e.preventDefault();
        console.log('üîµ [Forgot Password] ===== FORM SUBMITTED =====');
        
        const email = document.getElementById('email').value;
        
        console.log('üîµ [Forgot Password] Form submitted for email:', email);
        
        // Disable button and show loading
        submitBtn.disabled = true;
        submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i> Sending...';
        
        // Hide previous messages
        alertMessage.classList.add('hidden');
        
        try {
            console.log('üîµ [Forgot Password] Sending POST request...');
            const response = await fetch('/auth/forgot-password', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ email })
            });
            
            console.log('üîµ [Forgot Password] Response status:', response.status);
            console.log('üîµ [Forgot Password] Response OK:', response.ok);
            
            const data = await response.json();
            console.log('üîµ [Forgot Password] Response data:', data);
            
            if (data.success) {
                // Show success message
                alertMessage.className = 'mb-6 bg-green-50 border-l-4 border-green-500 p-4 rounded animate-fade-in';
                alertMessage.innerHTML = `
                    <div class="flex items-start">
                        <i class="fas fa-check-circle text-green-500 mt-0.5 mr-3"></i>
                        <div>
                            <p class="text-green-800 font-semibold">Success!</p>
                            <p class="text-green-700 text-sm mt-1">${data.message}</p>
                        </div>
                    </div>
                `;
                alertMessage.classList.remove('hidden');
                
                console.log('‚úÖ [Forgot Password] Success! Redirecting to:', data.redirectUrl);
                // Redirect after 2 seconds
                setTimeout(() => {
                    console.log('üîµ [Forgot Password] Redirecting now...');
                    window.location.href = data.redirectUrl;
                }, 2000);
            } else {
                throw new Error(data.message || 'Failed to send reset code');
            }
        } catch (error) {
            console.error('‚ùå [Forgot Password] Error:', error);
            console.error('‚ùå [Forgot Password] Error stack:', error.stack);
            
            // Show error message
            alertMessage.className = 'mb-6 bg-red-50 border-l-4 border-red-500 p-4 rounded animate-fade-in';
            alertMessage.innerHTML = `
                <div class="flex items-start">
                    <i class="fas fa-exclamation-circle text-red-500 mt-0.5 mr-3"></i>
                    <div>
                        <p class="text-red-800 font-semibold">Error</p>
                        <p class="text-red-700 text-sm mt-1">${error.message}</p>
                    </div>
                </div>
            `;
            alertMessage.classList.remove('hidden');
            
            // Re-enable button
            submitBtn.disabled = false;
            submitBtn.innerHTML = '<i class="fas fa-paper-plane mr-2"></i> Send Reset Code';
        }
    });
    
    console.log('‚úÖ [Forgot Password] Event listener attached successfully');
});

// Add animation CSS
const style = document.createElement('style');
style.textContent = `
    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(-10px); }
        to { opacity: 1; transform: translateY(0); }
    }
    .animate-fade-in {
        animation: fadeIn 0.3s ease-out;
    }
`;
document.head.appendChild(style);
</script>

