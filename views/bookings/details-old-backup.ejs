        // Listen for pickup confirmation
        socket.on('pickup-confirmed', (data) => {
            console.log('Pickup confirmed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('✅ Pickup verified! You are on board.', 'success');
                setTimeout(() => location.reload(), 2000);
