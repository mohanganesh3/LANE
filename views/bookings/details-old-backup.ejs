        // Listen for dropoff confirmation
        socket.on('dropoff-confirmed', (data) => {
            console.log('Dropoff confirmed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('✅ Dropoff verified! Journey complete.', 'success');
                setTimeout(() => location.reload(), 2000);
            }
        });

        // Listen for ride auto-completed
        socket.on('ride-auto-completed', (data) => {
            console.log('Ride auto-completed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('🎉 Ride completed! Please rate your experience.', 'success');
                setTimeout(() => location.reload(), 2000);
            }
        });

        // Listen for ride started
        socket.on('ride-started', (data) => {
            console.log('Ride started:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('🚗 Driver has started the ride!', 'info');
                setTimeout(() => location.reload(), 2000);
            }
        });

        function cancelBooking() {
            const reason = prompt('Please provide a reason for cancellation (optional):');
            if (reason === null) return; // User clicked cancel

            if (confirm('Are you sure you want to cancel this booking?')) {
                fetch('/bookings/<%= booking._id %>/cancel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ reason: reason || 'No reason provided' })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            LANEApp.showAlert('Booking cancelled successfully', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            LANEApp.showAlert(data.message || 'Failed to cancel booking', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        LANEApp.showAlert('Failed to cancel booking', 'error');
                    });
            }
        }

        function acceptBooking() {
            if (confirm('Accept this booking request?')) {
                fetch('/bookings/<%= booking._id %>/accept', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            LANEApp.showAlert('Booking accepted!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            LANEApp.showAlert(data.message || 'Failed to accept booking', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        LANEApp.showAlert('Failed to accept booking', 'error');
                    });
            }
        }

        function rejectBooking() {
            const reason = prompt('Please provide a reason for rejection:');
            if (!reason) {
                LANEApp.showAlert('Please provide a reason', 'warning');
                return;
            }

            if (confirm('Reject this booking request?')) {
                fetch('/bookings/<%= booking._id %>/reject', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ reason })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            LANEApp.showAlert('Booking rejected', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            LANEApp.showAlert(data.message || 'Failed to reject booking', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        LANEApp.showAlert('Failed to reject booking', 'error');
                    });
            }
        }

        // Copy OTP to clipboard
        function copyOTP(otp, type) {
            navigator.clipboard.writeText(otp).then(() => {
                LANEApp.showAlert(`✅ ${type === 'pickup' ? 'Pickup' : 'Dropoff'} OTP copied!`, 'success');
            }).catch(err => {
                console.error('Failed to copy:', err);
                LANEApp.showAlert('Failed to copy OTP', 'error');
            });
        }

// Start OTP countdown timers
<% if (isPassenger) { %>
    <% if (booking.verification?.pickup?.expiresAt) { %>
                function updatePickupTimer() {
                    const expiresAt = new Date('<%= booking.verification.pickup.expiresAt %>');
                    const now = new Date();
                    const diff = expiresAt - now;

                    if (diff <= 0) {
                        const timerEl = document.getElementById('pickup-otp-timer');
                        if (timerEl) {
                            timerEl.textContent = 'Expired';
                            timerEl.classList.add('text-red-300');
                        }
                        return;
                    }

                    const minutes = Math.floor(diff / 60000);
                    const seconds = Math.floor((diff % 60000) / 1000);

                    const timerEl = document.getElementById('pickup-otp-timer');
                    if (timerEl) {
                        timerEl.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;

                        // Warning when less than 5 minutes
                        if (minutes < 5) {
                            timerEl.classList.add('text-red-300', 'animate-pulse');
                        }
                    }

                    setTimeout(updatePickupTimer, 1000);
                }

                // Start timer on page load
                updatePickupTimer();
    <% } %>
    
    <% if (booking.verification?.dropoff?.expiresAt) { %>
                function updateDropoffTimer() {
                    const expiresAt = new Date('<%= booking.verification.dropoff.expiresAt %>');
                    const now = new Date();
                    const diff = expiresAt - now;

                    if (diff <= 0) {
                        const timerEl = document.getElementById('dropoff-otp-timer');
                        if (timerEl) {
                            timerEl.textContent = 'Expired';
                            timerEl.classList.add('text-red-300');
                        }
                        return;
                    }

                    const minutes = Math.floor(diff / 60000);
                    const seconds = Math.floor((diff % 60000) / 1000);

                    const timerEl = document.getElementById('dropoff-otp-timer');
                    if (timerEl) {
                        timerEl.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;

                        // Warning when less than 10 minutes
                        if (minutes < 10) {
                            timerEl.classList.add('text-red-300', 'animate-pulse');
                        }
                    }

                    setTimeout(updateDropoffTimer, 1000);
                }

                // Start timer on page load
                updateDropoffTimer();
    <% } %>
