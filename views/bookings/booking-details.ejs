<%- include('../partials/header') %>

    <!-- Socket.IO for real-time updates -->
    <script src="/socket.io/socket.io.js"></script>

    <div class="max-w-4xl mx-auto px-4 py-8">
        <!-- Back Button -->
        <a href="/bookings/my-bookings" class="inline-flex items-center text-primary hover:text-green-700 mb-6">
            <i class="fas fa-arrow-left mr-2"></i>Back to My Bookings
        </a>

        <!-- Booking Header -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-6">
            <div class="flex justify-between items-start mb-6">
                <div>
                    <h1 class="text-3xl font-bold text-gray-800 mb-2">
                        <i class="fas fa-ticket-alt text-primary mr-2"></i>Booking Details
                    </h1>
                    <p class="text-gray-600">Booking ID: <span class="font-mono font-semibold">#<%=
                                booking._id.toString().slice(-8).toUpperCase() %></span></p>
                                        <% 
                                                // Compute status badge
                                                let statusClass = '';
                                                let statusIcon = '';
                                                let statusText = booking.status;
                                                const isPaymentPaid = booking.payment && booking.payment.status === 'PAID';
                                                const isDroppedOff = booking.status === 'DROPPED_OFF';
                                                const isPickedUp = booking.status === 'PICKED_UP';
                                                if ((isDroppedOff || isPickedUp) && isPaymentPaid) {
                                                    statusClass = 'bg-green-100 text-green-800';
                                                    statusIcon = 'fas fa-check-circle';
                                                    statusText = 'Completed';
                                                } else if (isDroppedOff && !isPaymentPaid) {
                                                    statusClass = 'bg-yellow-100 text-yellow-800';
                                                    statusIcon = 'fas fa-clock';
                                                    statusText = 'Payment Pending';
                                                } else {
                                                    switch (booking.status) {
                                                        case 'PENDING':
                                                            statusClass = 'bg-yellow-100 text-yellow-800';
                                                            statusIcon = 'fas fa-clock';
                                                            break;
                                                        case 'CONFIRMED':
                                                            statusClass = 'bg-blue-100 text-blue-800';
                                                            statusIcon = 'fas fa-check-circle';
                                                            break;
                                                        case 'PICKUP_PENDING':
                                                            statusClass = 'bg-blue-100 text-blue-800';
                                                            statusIcon = 'fas fa-hourglass-half';
                                                            statusText = 'Ready for Pickup';
                                                            break;
                                                        case 'PICKED_UP':
                                                            statusClass = 'bg-purple-100 text-purple-800';
                                                            statusIcon = 'fas fa-user-check';
                                                            statusText = 'On Board';
                                                            break;
                                                        case 'IN_PROGRESS':
                                                            statusClass = 'bg-blue-100 text-blue-800';
                                                            statusIcon = 'fas fa-car';
                                                            break;
                                                        case 'COMPLETED':
                                                            statusClass = 'bg-green-100 text-green-800';
                                                            statusIcon = 'fas fa-check-circle';
                                                            break;
                                                        case 'CANCELLED':
                                                            statusClass = 'bg-red-100 text-red-800';
                                                            statusIcon = 'fas fa-times-circle';
                                                            break;
                                                        case 'REJECTED':
                                                            statusClass = 'bg-red-100 text-red-800';
                                                            statusIcon = 'fas fa-ban';
                                                            break;
                                                    }
                                                }
                                        %>
                        <span class="<%= statusClass %> px-4 py-2 rounded-full text-sm font-semibold inline-block mt-2">
                            <i class="<%= statusIcon %> mr-2"></i>
                            <%= statusText %>
                        </span>
                </div>

                <% if (isPassenger && (booking.status==='PENDING' || booking.status==='CONFIRMED')) { %>
                    <button onclick="cancelBooking()"
                        class="px-4 py-2 bg-red-500 hover:bg-red-600 text-white rounded-lg transition">
                        <i class="fas fa-times mr-2"></i>Cancel Booking
                    </button>
                    <% } %>

                    <% if (isPassenger && (
                        booking.status==='CONFIRMED' ||
                        booking.status==='PICKUP_PENDING' ||
                        booking.status==='PICKED_UP' ||
                        booking.status==='IN_TRANSIT' ||
                        booking.status==='DROPOFF_PENDING'
                    )) { %>
                        <a href="/tracking/<%= booking._id %>" class="ml-3 px-4 py-2 bg-primary hover:bg-green-700 text-white rounded-lg transition">
                            <i class="fas fa-map-marked-alt mr-2"></i>Live Track
                        </a>
                    <% } %>
            </div>

            <!-- OTP SECTION FOR PASSENGERS -->
            <% if (isPassenger) { %>
                <!-- Pickup OTP Display -->
                <% if ((booking.status==='CONFIRMED' || booking.status==='PICKUP_PENDING' ) &&
                    booking.verification?.pickup?.code) { %>
                    <div class="bg-gradient-to-r from-blue-500 to-blue-600 rounded-xl p-6 mb-6 text-white shadow-lg">
                        <div class="flex items-center justify-between mb-4">
                            <div class="flex items-center">
                                <div
                                    class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center mr-3">
                                    <i class="fas fa-key text-2xl"></i>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold">Pickup OTP</h3>
                                    <p class="text-sm text-blue-100">Show this to your driver at pickup</p>
                                </div>
                            </div>
                            <!-- Expiry timer removed - OTPs are valid indefinitely -->
                        </div>

                        <div class="bg-white bg-opacity-20 rounded-lg p-4 mb-4">
                            <div class="flex items-center justify-between">
                                <div class="flex-1 text-center">
                                    <p class="text-6xl font-bold tracking-wider letter-spacing-wide"
                                        id="pickup-otp-display">
                                        <%= booking.verification.pickup.code %>
                                    </p>
                                </div>
                                <button onclick="copyOTP('<%= booking.verification.pickup.code %>', 'pickup')"
                                    class="ml-4 px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg transition">
                                    <i class="fas fa-copy text-xl"></i>
                                </button>
                            </div>
                        </div>

                        <div class="flex items-start space-x-2 text-sm text-blue-100">
                            <i class="fas fa-info-circle mt-0.5"></i>
                            <div>
                                <p class="font-semibold">Important:</p>
                                <ul class="list-disc list-inside ml-2 space-y-1">
                                    <li>Share this OTP with driver when they arrive</li>
                                    <li>Don't share with anyone else</li>
                                    <li>Keep this OTP ready for pickup verification</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <% } %>

                        <!-- Dropoff OTP Display -->
                        <% if (booking.status==='PICKED_UP' && booking.verification?.dropoff?.code) { %>
                            <div
                                class="bg-gradient-to-r from-purple-500 to-purple-600 rounded-xl p-6 mb-6 text-white shadow-lg">
                                <div class="flex items-center justify-between mb-4">
                                    <div class="flex items-center">
                                        <div
                                            class="w-12 h-12 bg-white bg-opacity-20 rounded-full flex items-center justify-center mr-3">
                                            <i class="fas fa-flag-checkered text-2xl"></i>
                                        </div>
                                        <div>
                                            <h3 class="text-xl font-bold">Dropoff OTP</h3>
                                            <p class="text-sm text-purple-100">Show this to your driver at destination
                                            </p>
                                        </div>
                                    </div>
                                    <!-- Expiry timer removed - OTPs are valid indefinitely -->
                                </div>

                                <div class="bg-white bg-opacity-20 rounded-lg p-4 mb-4">
                                    <div class="flex items-center justify-between">
                                        <div class="flex-1 text-center">
                                            <p class="text-6xl font-bold tracking-wider letter-spacing-wide"
                                                id="dropoff-otp-display">
                                                <%= booking.verification.dropoff.code %>
                                            </p>
                                        </div>
                                        <button onclick="copyOTP('<%= booking.verification.dropoff.code %>', 'dropoff')"
                                            class="ml-4 px-4 py-2 bg-white bg-opacity-20 hover:bg-opacity-30 rounded-lg transition">
                                            <i class="fas fa-copy text-xl"></i>
                                        </button>
                                    </div>
                                </div>

                                <div class="flex items-start space-x-2 text-sm text-purple-100">
                                    <i class="fas fa-info-circle mt-0.5"></i>
                                    <div>
                                        <p class="font-semibold">Important:</p>
                                        <ul class="list-disc list-inside ml-2 space-y-1">
                                            <li>Share this OTP when you reach your destination</li>
                                            <li>Driver will verify before marking dropoff complete</li>
                                            <li>Keep this OTP ready for dropoff verification</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <% } %>

                                <!-- Journey Status for Passengers -->
                                <% if (booking.status==='PICKUP_PENDING' ) { %>
                                    <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
                                        <div class="flex items-center">
                                            <i class="fas fa-car text-blue-500 text-2xl mr-3 animate-bounce"></i>
                                            <div>
                                                <h3 class="font-semibold text-blue-800">Driver is on the way!</h3>
                                                <p class="text-sm text-blue-600">Get ready with your pickup OTP</p>
                                            </div>
                                        </div>
                                    </div>
                                    <% } else if (booking.status==='PICKED_UP' ) { %>
                                        <div class="bg-purple-50 border-l-4 border-purple-500 p-4 mb-6">
                                            <div class="flex items-center">
                                                <i class="fas fa-route text-purple-500 text-2xl mr-3 animate-pulse"></i>
                                                <div>
                                                    <h3 class="font-semibold text-purple-800">Journey in progress</h3>
                                                    <p class="text-sm text-purple-600">You'll need your dropoff OTP when
                                                        you reach destination</p>
                                                </div>
                                            </div>
                                        </div>
                                        <% } else if (booking.status==='DROPPED_OFF' ) { %>
                                            <div class="bg-yellow-50 border-l-4 border-yellow-500 p-4 mb-6">
                                                <div class="flex items-center">
                                                    <i class="fas fa-exclamation-triangle text-yellow-500 text-2xl mr-3"></i>
                                                    <div class="flex-1">
                                                        <h3 class="font-semibold text-yellow-800">Payment Pending</h3>
                                                        <p class="text-sm text-yellow-600">Journey completed! Please complete your payment.</p>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <!-- Payment Action Card -->
                                            <% if (booking.payment?.status !== 'PAID' && booking.payment?.status !== 'PAYMENT_CONFIRMED') { %>
                                            <div class="bg-gradient-to-r from-green-500 to-green-600 rounded-xl p-6 mb-6 text-white shadow-lg" id="payment-section">
                                                <div class="flex items-center justify-between mb-4">
                                                    <div>
                                                        <h3 class="text-xl font-bold mb-2">
                                                            <i class="fas fa-wallet mr-2"></i>Complete Payment
                                                        </h3>
                                                        <p class="text-green-100 text-sm">Pay ₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %> to complete your booking</p>
                                                    </div>
                                                    <div class="text-right">
                                                        <p class="text-3xl font-bold">₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %></p>
                                                        <p class="text-green-100 text-xs">Total Amount</p>
                                                    </div>
                                                </div>
                                                
                                                <div class="bg-white bg-opacity-20 rounded-lg p-4 mb-4">
                                                    <div class="flex justify-between items-center text-sm mb-2">
                                                        <span>Ride Fare:</span>
                                                        <span>₹<%= booking.payment?.rideFare || booking.totalPrice || 0 %></span>
                                                    </div>
                                                    <div class="flex justify-between items-center text-sm">
                                                        <span>Platform Fee:</span>
                                                        <span>₹<%= booking.payment?.platformCommission || 50 %></span>
                                                    </div>
                                                </div>
                                                
                                                <button 
                                                    onclick="completePayment('<%= booking._id %>')" 
                                                    class="w-full bg-white text-green-600 font-bold py-4 px-6 rounded-lg hover:bg-green-50 transition duration-300 transform hover:scale-105 shadow-lg"
                                                    id="pay-now-btn"
                                                >
                                                    <i class="fas fa-check-circle mr-2"></i>PAY NOW ₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %>
                                                </button>
                                                
                                                <p class="text-center text-green-100 text-xs mt-3">
                                                    <i class="fas fa-lock mr-1"></i>Secure payment • Instant confirmation
                                                </p>
                                            </div>
                                            <% } else { %>
                                            <div class="bg-green-50 border-l-4 border-green-500 p-4 mb-6">
                                                <div class="flex items-center">
                                                    <i class="fas fa-check-circle text-green-500 text-2xl mr-3"></i>
                                                    <div>
                                                        <h3 class="font-semibold text-green-800">Payment Completed!</h3>
                                                        <p class="text-sm text-green-600">Thank you! Your payment has been confirmed.</p>
                                                    </div>
                                                </div>
                                            </div>
                                            <% } %>
                                            <% } %>
                                                <% } %>

                                                    <!-- Ride Information -->
                                                    <div class="border-t border-b py-6 mb-6">
                                                        <h2 class="text-xl font-bold text-gray-800 mb-4">
                                                            <i class="fas fa-route text-primary mr-2"></i>Journey
                                                            Details
                                                        </h2>
                                                        <div class="space-y-4">
                                                            <div class="flex items-center">
                                                                <div
                                                                    class="flex-shrink-0 w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                                                                    <i
                                                                        class="fas fa-map-marker-alt text-green-600 text-xl"></i>
                                                                </div>
                                                                <div class="ml-4 flex-1">
                                                                    <p class="text-sm text-gray-500">Pickup</p>
                                                                    <p class="text-lg font-semibold text-gray-800">
                                                                        <%= booking.pickupPoint?.name ||
                                                                            booking.pickupPoint?.address
                                                                            || 'Pickup location' %>
                                                                    </p>
                                                                </div>
                                                            </div>

                                                            <div class="ml-6 border-l-2 border-gray-300 pl-6 py-2">
                                                                <div class="text-gray-600 flex items-center gap-4">
                                                                    <span><i class="fas fa-road mr-2"></i>
                                                                        <%= booking.ride?.route?.distance ?
                                                                            booking.ride.route.distance.toFixed(1)
                                                                            + ' km' : 'N/A' %>
                                                                    </span>
                                                                    <span><i class="fas fa-clock mr-2"></i>
                                                                        <%= booking.ride?.route?.duration ?
                                                                            Math.round(booking.ride.route.duration)
                                                                            + ' mins' : 'N/A' %>
                                                                    </span>
                                                                </div>
                                                            </div>

                                                            <div class="flex items-center">
                                                                <div
                                                                    class="flex-shrink-0 w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                                                                    <i
                                                                        class="fas fa-map-marker-alt text-red-600 text-xl"></i>
                                                                </div>
                                                                <div class="ml-4 flex-1">
                                                                    <p class="text-sm text-gray-500">Dropoff</p>
                                                                    <p class="text-lg font-semibold text-gray-800">
                                                                        <%= booking.dropoffPoint?.name ||
                                                                            booking.dropoffPoint?.address
                                                                            || 'Dropoff location' %>
                                                                    </p>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Schedule -->
                                                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                                                        <div class="bg-gray-50 rounded-lg p-4">
                                                            <h3 class="font-semibold text-gray-700 mb-2">
                                                                <i
                                                                    class="fas fa-calendar-alt text-primary mr-2"></i>Departure
                                                                Time
                                                            </h3>
                                                            <p class="text-lg">
                                                                <%= new Date(booking.ride?.schedule?.departureDateTime
                                                                    || booking.createdAt).toLocaleString('en-US', {
                                                                    weekday: 'long' , year: 'numeric' , month: 'long' ,
                                                                    day: 'numeric' , hour: '2-digit' , minute: '2-digit'
                                                                    }) %>
                                                            </p>
                                                        </div>

                                                        <div class="bg-gray-50 rounded-lg p-4">
                                                            <h3 class="font-semibold text-gray-700 mb-2">
                                                                <i class="fas fa-users text-primary mr-2"></i>Seats
                                                                Booked
                                                            </h3>
                                                            <p class="text-lg">
                                                                <%= booking.seatsBooked || 1 %> seat(s)
                                                            </p>
                                                        </div>
                                                    </div>

                                                    <!-- Payment Details -->
                                                    <div class="bg-gradient-to-br from-blue-50 to-primary bg-opacity-10 rounded-lg p-6 mb-6 border border-primary border-opacity-20">
                                                        <h3 class="font-semibold text-gray-700 mb-4 text-lg">
                                                            <i class="fas fa-credit-card text-primary mr-2"></i>Payment
                                                            Details
                                                        </h3>
                                                        <div class="space-y-3">
                                                            <!-- Ride Fare -->
                                                            <div class="flex justify-between items-center">
                                                                <span class="text-gray-600">Ride Fare (<%= booking.seatsBooked || 1 %> seat<%= booking.seatsBooked > 1 ? 's' : '' %>):</span>
                                                                <span class="font-semibold">₹<%= booking.payment?.rideFare || booking.totalPrice || 0 %></span>
                                                            </div>
                                                            
                                                            <!-- Platform Commission -->
                                                            <div class="flex justify-between items-center">
                                                                <span class="text-gray-600">Platform Fee:</span>
                                                                <span class="font-semibold">₹<%= booking.payment?.platformCommission || 50 %></span>
                                                            </div>
                                                            
                                                            <!-- Divider -->
                                                            <div class="border-t border-gray-300 my-2"></div>
                                                            
                                                            <!-- Total Amount -->
                                                            <div class="flex justify-between items-center text-lg">
                                                                <span class="font-bold text-gray-800">Total Amount:</span>
                                                                <span class="font-bold text-primary text-2xl">₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %></span>
                                                            </div>
                                                            
                                                            <!-- Payment Method -->
                                                            <div class="flex justify-between items-center pt-3 border-t border-gray-200">
                                                                <span class="text-gray-600">Payment Method:</span>
                                                                <span class="font-semibold px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
                                                                    <i class="fas fa-<%= booking.payment?.method === 'CASH' ? 'money-bill-wave' : 'mobile-alt' %> mr-1"></i>
                                                                    <%= booking.payment?.method || 'CASH' %>
                                                                </span>
                                                            </div>
                                                            
                                                            <!-- Payment Status -->
                                                            <div class="flex justify-between items-center">
                                                                <span class="text-gray-600">Payment Status:</span>
                                                                <span class="px-3 py-1 bg-<%= booking.payment?.status === 'PAID' || booking.payment?.status === 'PAYMENT_CONFIRMED' ? 'green' : 'yellow' %>-100 text-<%= booking.payment?.status === 'PAID' || booking.payment?.status === 'PAYMENT_CONFIRMED' ? 'green' : 'yellow' %>-800 rounded-full text-sm font-semibold">
                                                                    <i class="fas fa-<%= booking.payment?.status === 'PAID' || booking.payment?.status === 'PAYMENT_CONFIRMED' ? 'check-circle' : 'clock' %> mr-1"></i>
                                                                    <%= booking.payment?.status === 'PAYMENT_CONFIRMED' ? 'PAID' : (booking.payment?.status || 'PENDING') %>
                                                                </span>
                                                            </div>
                                                            
                                                            <!-- Price Breakdown Info -->
                                                            <div class="mt-4 p-3 bg-blue-50 border-l-4 border-blue-400 rounded">
                                                                <p class="text-xs text-blue-800">
                                                                    <i class="fas fa-info-circle mr-1"></i>
                                                                    <strong>Note:</strong> Platform fee helps us maintain and improve LANE services.
                                                                </p>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <!-- Special Requests -->
                                                    <% if (booking.specialRequests) { %>
                                                        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6">
                                                            <h3 class="font-semibold text-gray-700 mb-2">
                                                                <i class="fas fa-comment text-blue-500 mr-2"></i>Special
                                                                Requests
                                                            </h3>
                                                            <p class="text-gray-700">
                                                                <%= booking.specialRequests %>
                                                            </p>
                                                        </div>
                                                        <% } %>

                                                            <!-- Rider Information (For Passengers) -->
                                                            <% if (isPassenger && booking.ride?.rider) { %>
                                                                <div class="border-t pt-6 mb-6">
                                                                    <h3 class="font-semibold text-gray-700 mb-4">
                                                                        <i
                                                                            class="fas fa-user text-primary mr-2"></i>Your
                                                                        Driver
                                                                    </h3>
                                                                    <div class="flex items-start space-x-4">
                                                                        <img src="<%= booking.ride.rider.profilePhoto || '/images/default-avatar.png' %>"
                                                                            alt="<%= getUserName(booking.ride.rider) %>"
                                                                            class="w-16 h-16 rounded-full">
                                                                        <div class="flex-1">
                                                                            <h4 class="text-lg font-semibold">
                                                                                <%= getUserName(booking.ride.rider) %>
                                                                            </h4>
                                                                            <div
                                                                                class="flex items-center text-yellow-500 mb-2">
                                                                                <% const
                                                                                    riderRating=booking.ride.rider.rating?.overall
                                                                                    || 0; %>
                                                                                    <i
                                                                                        class="fas fa-star <%= 0 < Math.floor(riderRating) ? '' : 'text-gray-300' %>"></i>
                                                                                    <i
                                                                                        class="fas fa-star <%= 1 < Math.floor(riderRating) ? '' : 'text-gray-300' %>"></i>
                                                                                    <i
                                                                                        class="fas fa-star <%= 2 < Math.floor(riderRating) ? '' : 'text-gray-300' %>"></i>
                                                                                    <i
                                                                                        class="fas fa-star <%= 3 < Math.floor(riderRating) ? '' : 'text-gray-300' %>"></i>
                                                                                    <i
                                                                                        class="fas fa-star <%= 4 < Math.floor(riderRating) ? '' : 'text-gray-300' %>"></i>
                                                                                    <span class="text-gray-600 ml-2">
                                                                                        <%= riderRating.toFixed(1) %>
                                                                                    </span>
                                                                            </div>
                                                                            <div
                                                                                class="flex gap-4 text-sm text-gray-600">
                                                                                <span><i class="fas fa-car mr-1"></i>
                                                                                    <%= booking.ride.rider.statistics?.totalRidesCompleted
                                                                                        || 0 %> rides
                                                                                </span>
                                                                                <% if (booking.ride.rider.phone) { %>
                                                                                    <span><i
                                                                                            class="fas fa-phone mr-1"></i>
                                                                                        <%= booking.ride.rider.phone %>
                                                                                    </span>
                                                                                    <% } %>
                                                                            </div>
                                                                            <% if (booking.status==='CONFIRMED' ||
                                                                                booking.status==='IN_PROGRESS' ) { %>
                                                                                <div class="mt-3">
                                                                                    <a href="/chat?userId=<%= booking.ride.rider._id %>"
                                                                                        class="inline-flex items-center px-4 py-2 bg-primary hover:bg-green-700 text-white rounded-lg transition">
                                                                                        <i
                                                                                            class="fas fa-comment mr-2"></i>Chat
                                                                                        with Driver
                                                                                    </a>
                                                                                </div>
                                                                                <% } %>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                                <% } %>

                                                                    <!-- Passenger Information (For Riders) -->
                                                                    <% if (isRider && booking.passenger) { %>
                                                                        <div class="border-t pt-6 mb-6">
                                                                            <h3
                                                                                class="font-semibold text-gray-700 mb-4">
                                                                                <i
                                                                                    class="fas fa-user text-primary mr-2"></i>Passenger
                                                                            </h3>
                                                                            <div class="flex items-start space-x-4">
                                                                                <img src="<%= booking.passenger.profilePhoto || '/images/default-avatar.png' %>"
                                                                                    alt="<%= getUserName(booking.passenger) %>"
                                                                                    class="w-16 h-16 rounded-full">
                                                                                <div class="flex-1">
