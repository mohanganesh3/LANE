    <script>
        // Initialize Socket.IO
        const socket = io();

        // Review functionality
        let selectedRating = 0;

        function setRating(rating) {
            selectedRating = rating;
            document.getElementById('rating').value = rating;

            // Update stars
            const stars = document.querySelectorAll('.rating-star');
            stars.forEach((star, index) => {
                const icon = star.querySelector('i');
                if (index < rating) {
                    icon.classList.remove('far');
                    icon.classList.add('fas', 'text-yellow-400');
                    icon.classList.remove('text-gray-300');
                } else {
                    icon.classList.remove('fas');
                    icon.classList.add('far', 'text-gray-300');
                    icon.classList.remove('text-yellow-400');
                }
            });

            // Update rating text
            const ratingTexts = ['', 'Poor', 'Fair', 'Good', 'Very Good', 'Excellent'];
            document.getElementById('ratingText').textContent = ratingTexts[rating];
        }

        const selectedTags = new Set();

        function toggleTag(btn) {
            const tag = (btn.getAttribute('data-tag') || btn.textContent.trim()).toUpperCase().replace(/\s+/g, '_');
            if (selectedTags.has(tag)) {
                selectedTags.delete(tag);
                btn.classList.remove('bg-green-100','text-green-800');
                btn.classList.add('bg-gray-100');
            } else {
                selectedTags.add(tag);
                btn.classList.remove('bg-gray-100');
                btn.classList.add('bg-green-100','text-green-800');
            }
        }

        async function submitReview(event) {
            event.preventDefault();

            if (selectedRating === 0) {
                LANEApp.showAlert('Please select a rating', 'error');
                return;
            }

            const isPassenger = <%= JSON.stringify(booking.passenger && booking.passenger._id && booking.passenger._id.toString() === (user && user._id ? user._id.toString() : '')) %>;
            const revieweeId = isPassenger ? '<%= booking.ride.rider._id %>' : '<%= booking.passenger._id %>';
            const formData = {
                bookingId: '<%= booking._id %>',
                revieweeId,
                rating: selectedRating,
                comment: document.getElementById('comment').value.trim(),
                punctuality: selectedRating, // simple single-rating for now
                communication: selectedRating,
                cleanliness: selectedRating,
                driving: selectedRating,
                tags: JSON.stringify(Array.from(selectedTags))
            };

            try {
                const response = await fetch('/reviews/booking/<%= booking._id %>', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify(formData)
                });

                const result = await response.json();

                if (result.success) {
                    LANEApp.showAlert('✅ Review submitted successfully!', 'success');
                    setTimeout(() => location.reload(), 1500);
                } else {
                    LANEApp.showAlert(result.message || 'Failed to submit review', 'error');
                }
            } catch (error) {
                console.error('Error submitting review:', error);
                LANEApp.showAlert('Failed to submit review', 'error');
            }
        }        // Join booking room for real-time updates
        socket.emit('join-booking', '<%= booking._id %>');
        socket.emit('join', 'user-<%= currentUser._id %>'); // Join user-specific room

        // Listen for booking confirmation (when rider accepts)
        socket.on('booking-confirmed', (data) => {
            console.log('✅ [Real-time] Booking confirmed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert(`🎉 ${data.riderName || 'Rider'} has confirmed your booking!`, 'success');
                
                // Update UI dynamically
                const statusBadge = document.querySelector('.status-badge');
                if (statusBadge) {
                    statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800';
                    statusBadge.innerHTML = '<i class="fas fa-check-circle mr-1"></i> Confirmed';
                }
            }
        });

        // Listen for booking status updates
        socket.on('booking-status-updated', (data) => {
            console.log('Booking status updated:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert(`Status updated: ${data.status}`, 'info');
                // Reload page to show new status
                setTimeout(() => location.reload(), 1500);
            }
        });

        // Listen for pickup confirmation
        socket.on('pickup-confirmed', (data) => {
            console.log('Pickup confirmed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('✅ Pickup verified! You are on board.', 'success');
                setTimeout(() => location.reload(), 2000);
            }
        });

        // Listen for dropoff confirmation
        socket.on('dropoff-confirmed', (data) => {
            console.log('Dropoff confirmed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('✅ Dropoff verified! Journey complete.', 'success');
                setTimeout(() => location.reload(), 2000);
            }
        });

        // Listen for ride auto-completed
        socket.on('ride-auto-completed', (data) => {
            console.log('Ride auto-completed:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('🎉 Ride completed! Please rate your experience.', 'success');
                setTimeout(() => location.reload(), 2000);
            }
        });

        // Listen for ride started (REAL-TIME UPDATE - NO RELOAD!)
        socket.on('ride-started', (data) => {
            console.log('✅ [Real-time] Ride started:', data);
            if (data.bookingId === '<%= booking._id %>') {
                LANEApp.showAlert('🚗 Driver has started the ride! Your pickup OTP is now active.', 'success');
                
                // Update UI dynamically without reload
                updateUIForRideStarted(data);
            }
        });

        function updateUIForRideStarted(data) {
            console.log('🔄 [UI Update] Updating for ride started');
            
            // 1. Update status badge
            const statusBadge = document.querySelector('.status-badge');
            if (statusBadge) {
                statusBadge.className = 'inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800';
                statusBadge.innerHTML = '<i class="fas fa-car mr-1"></i> Pickup Pending';
            }

            // 2. Show pickup OTP section if hidden
            const pickupSection = document.getElementById('pickup-otp-section');
            if (pickupSection && pickupSection.classList.contains('hidden')) {
                pickupSection.classList.remove('hidden');
                
                // Update OTP display
                const otpDisplay = document.getElementById('pickup-otp-display');
                if (otpDisplay && data.pickupOTP) {
                    otpDisplay.textContent = data.pickupOTP;
                }
            }

            // 3. Show "Driver is on the way" alert
            const journeyStatus = document.querySelector('.bg-blue-50.border-l-4.border-blue-500');
            if (!journeyStatus) {
                const otpContainer = document.querySelector('.pickup-otp-container') || document.querySelector('.space-y-6');
                if (otpContainer) {
                    const alertHTML = `
                        <div class="bg-blue-50 border-l-4 border-blue-500 p-4 mb-6 animate-fade-in">
                            <div class="flex items-center">
                                <i class="fas fa-car text-blue-500 text-2xl mr-3 animate-bounce"></i>
                                <div>
                                    <h3 class="font-semibold text-blue-800">Driver is on the way!</h3>
                                    <p class="text-sm text-blue-600">Get ready with your pickup OTP</p>
                                </div>
                            </div>
                        </div>
                    `;
                    otpContainer.insertAdjacentHTML('afterbegin', alertHTML);
                }
            }

            // 4. Update tracking link button
            const trackingBtn = document.querySelector('a[href*="/tracking/"]');
            if (trackingBtn) {
                trackingBtn.classList.remove('opacity-50', 'cursor-not-allowed');
                trackingBtn.classList.add('bg-blue-600', 'hover:bg-blue-700');
            }

            console.log('✅ [UI Update] Ride started UI updated successfully');
        }

        function cancelBooking() {
            const reason = prompt('Please provide a reason for cancellation (optional):');
            if (reason === null) return; // User clicked cancel

            if (confirm('Are you sure you want to cancel this booking?')) {
                fetch('/bookings/<%= booking._id %>/cancel', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ reason: reason || 'No reason provided' })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            LANEApp.showAlert('Booking cancelled successfully', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            LANEApp.showAlert(data.message || 'Failed to cancel booking', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        LANEApp.showAlert('Failed to cancel booking', 'error');
                    });
            }
        }

        function acceptBooking() {
            if (confirm('Accept this booking request?')) {
                fetch('/bookings/<%= booking._id %>/accept', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' }
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            LANEApp.showAlert('Booking accepted!', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            LANEApp.showAlert(data.message || 'Failed to accept booking', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        LANEApp.showAlert('Failed to accept booking', 'error');
                    });
            }
        }

        function rejectBooking() {
            const reason = prompt('Please provide a reason for rejection:');
            if (!reason) {
                LANEApp.showAlert('Please provide a reason', 'warning');
                return;
            }

            if (confirm('Reject this booking request?')) {
                fetch('/bookings/<%= booking._id %>/reject', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ reason })
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            LANEApp.showAlert('Booking rejected', 'success');
                            setTimeout(() => location.reload(), 1500);
                        } else {
                            LANEApp.showAlert(data.message || 'Failed to reject booking', 'error');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        LANEApp.showAlert('Failed to reject booking', 'error');
                    });
            }
        }

        // Copy OTP to clipboard
        function copyOTP(otp, type) {
            navigator.clipboard.writeText(otp).then(() => {
                LANEApp.showAlert(`✅ ${type === 'pickup' ? 'Pickup' : 'Dropoff'} OTP copied!`, 'success');
            }).catch(err => {
                console.error('Failed to copy:', err);
                LANEApp.showAlert('Failed to copy OTP', 'error');
            });
        }

// Start OTP countdown timers
<% if (isPassenger) { %>
    <% if (booking.verification?.pickup?.expiresAt) { %>
                function updatePickupTimer() {
                    const expiresAt = new Date('<%= booking.verification.pickup.expiresAt %>');
                    const now = new Date();
                    const diff = expiresAt - now;

                    if (diff <= 0) {
                        const timerEl = document.getElementById('pickup-otp-timer');
                        if (timerEl) {
                            timerEl.textContent = 'Expired';
                            timerEl.classList.add('text-red-300');
                        }
                        return;
                    }

                    const minutes = Math.floor(diff / 60000);
                    const seconds = Math.floor((diff % 60000) / 1000);

                    const timerEl = document.getElementById('pickup-otp-timer');
                    if (timerEl) {
                        timerEl.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;

                        // Warning when less than 5 minutes
                        if (minutes < 5) {
                            timerEl.classList.add('text-red-300', 'animate-pulse');
                        }
                    }

                    setTimeout(updatePickupTimer, 1000);
                }

                // Start timer on page load
                updatePickupTimer();
    <% } %>
    
    <% if (booking.verification?.dropoff?.expiresAt) { %>
                function updateDropoffTimer() {
                    const expiresAt = new Date('<%= booking.verification.dropoff.expiresAt %>');
                    const now = new Date();
                    const diff = expiresAt - now;

                    if (diff <= 0) {
                        const timerEl = document.getElementById('dropoff-otp-timer');
                        if (timerEl) {
                            timerEl.textContent = 'Expired';
                            timerEl.classList.add('text-red-300');
                        }
                        return;
                    }

                    const minutes = Math.floor(diff / 60000);
                    const seconds = Math.floor((diff % 60000) / 1000);

                    const timerEl = document.getElementById('dropoff-otp-timer');
                    if (timerEl) {
                        timerEl.textContent = `${minutes}:${seconds.toString().padStart(2, '0')}`;

                        // Warning when less than 10 minutes
                        if (minutes < 10) {
                            timerEl.classList.add('text-red-300', 'animate-pulse');
                        }
                    }

                    setTimeout(updateDropoffTimer, 1000);
                }

                // Start timer on page load
                updateDropoffTimer();
    <% } %>
<% } %>

        // Complete Payment Function
        async function completePayment(bookingId) {
            const confirmMsg = 'Complete payment of ₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %>?';
            if (!confirm(confirmMsg)) {
                return;
            }

            const payBtn = document.getElementById('pay-now-btn');
            if (payBtn) {
                payBtn.disabled = true;
                payBtn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Processing...';
            }

            try {
                const response = await fetch(`/bookings/${bookingId}/complete-payment`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });

                const result = await response.json();

                if (result.success) {
                    LANEApp.showAlert('✅ Payment completed successfully!', 'success');
                    
                    // Hide payment section
                    const paymentSection = document.getElementById('payment-section');
                    if (paymentSection) {
                        paymentSection.style.display = 'none';
                    }
                    
                    // Reload page after short delay
                    setTimeout(() => {
                        location.reload();
                    }, 1500);
                } else {
                    LANEApp.showAlert(result.message || 'Payment failed. Please try again.', 'error');
                    if (payBtn) {
                        payBtn.disabled = false;
                        payBtn.innerHTML = '<i class="fas fa-check-circle mr-2"></i>PAY NOW ₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %>';
                    }
                }
            } catch (error) {
                console.error('Payment error:', error);
                LANEApp.showAlert('Payment failed. Please try again.', 'error');
                if (payBtn) {
                    payBtn.disabled = false;
                    payBtn.innerHTML = '<i class="fas fa-check-circle mr-2"></i>PAY NOW ₹<%= booking.payment?.totalAmount || (booking.totalPrice || 0) + 50 %>';
                }
            }
        }

    </script>

