<!-- Leaflet CSS -->
<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

<style>
    .sos-button {
        width: 250px;
        height: 250px;
        border-radius: 50%;
        background: linear-gradient(145deg, #dc2626, #991b1b);
        box-shadow: 0 10px 40px rgba(220, 38, 38, 0.4);
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
    }
    
    .sos-button:hover {
        transform: scale(1.05);
        box-shadow: 0 15px 50px rgba(220, 38, 38, 0.6);
    }
    
    .sos-button:active {
        transform: scale(0.95);
    }
    
    .sos-button.holding {
        animation: pulse 0.5s infinite;
        background: linear-gradient(145deg, #991b1b, #7f1d1d);
    }
    
    @keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }
    
    .progress-ring {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%) rotate(-90deg);
    }
    
    .progress-ring-circle {
        transition: stroke-dashoffset 0.05s;
        transform-origin: 50% 50%;
    }
    
    .location-status {
        animation: blink 1.5s infinite;
    }
    
    @keyframes blink {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.5; }
    }
    
    /* Fade-in animation for permission popup */
    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.9);
        }
        to {
            opacity: 1;
            transform: scale(1);
        }
    }
    
    .animate-fadeIn {
        animation: fadeIn 0.3s ease-out;
    }
    
    #map {
        height: 400px;
        border-radius: 12px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        z-index: 1;
        position: relative;
    }
    
    /* Toast animation */
    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(100%);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }
    
    .animate-slideIn {
        animation: slideIn 0.3s ease-out;
    }
</style>

<div class="pt-20 pb-12 min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container mx-auto px-4 max-w-6xl">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-4xl font-bold text-gray-800 mb-2">
                <i class="fas fa-exclamation-triangle text-red-600 mr-3"></i>
                Emergency SOS
            </h1>
            <p class="text-gray-600 text-lg">Press and hold the button for 3 seconds to send emergency alert</p>
        </div>

        <!-- Alert Messages -->
        <div id="alertMessage" class="hidden mb-6">
            <div class="bg-green-100 border-l-4 border-green-500 text-green-700 p-4 rounded-lg" role="alert">
                <div class="flex items-center">
                    <i class="fas fa-check-circle text-2xl mr-3"></i>
                    <div>
                        <p class="font-bold">Emergency Alert Sent!</p>
                        <p class="text-sm">Admin and your guardians have been notified with your location.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid md:grid-cols-2 gap-8">
            <!-- Left Column - SOS Button -->
            <div class="bg-white rounded-xl shadow-lg p-8">
                <div class="flex flex-col items-center justify-center space-y-8">
                    <!-- Location Status -->
                    <div id="locationStatus" class="w-full">
                        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                            <div class="flex items-center justify-center space-x-2">
                                <i class="fas fa-map-marker-alt text-yellow-600 location-status"></i>
                                <span class="text-yellow-800 font-semibold">Getting your location...</span>
                            </div>
                        </div>
                    </div>

                    <!-- SOS Button -->
                    <div class="relative">
                        <button 
                            id="sosButton" 
                            class="sos-button flex items-center justify-center cursor-pointer disabled:opacity-50 disabled:cursor-not-allowed"
                            disabled>
                            <svg class="progress-ring" width="270" height="270">
                                <circle
                                    class="progress-ring-circle"
                                    stroke="#fff"
                                    stroke-width="6"
                                    fill="transparent"
                                    r="128"
                                    cx="135"
                                    cy="135"
                                    style="stroke-dasharray: 804.2; stroke-dashoffset: 804.2;"
                                />
                            </svg>
                            <div class="absolute text-center">
                                <i class="fas fa-hand-paper text-white text-5xl mb-3"></i>
                                <p class="text-white font-bold text-xl">HOLD</p>
                                <p class="text-white text-sm">for 3 seconds</p>
                            </div>
                        </button>
                        
                        <!-- Timer Display -->
                        <div id="timerDisplay" class="hidden absolute -bottom-16 left-1/2 transform -translate-x-1/2">
                            <div class="bg-white rounded-full px-6 py-3 shadow-lg">
                                <span id="timerText" class="text-3xl font-bold text-red-600">3</span>
                            </div>
                        </div>
                    </div>

                    <!-- Instructions -->
                    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 w-full">
                        <h3 class="font-semibold text-blue-900 mb-2 flex items-center">
                            <i class="fas fa-info-circle mr-2"></i>
                            How to use:
                        </h3>
                        <ul class="text-blue-800 text-sm space-y-1">
                            <li>• Press and hold the red button</li>
                            <li>• Keep holding for 3 seconds</li>
                            <li>• Alert will be sent to admin and guardians</li>
                            <li>• Your location will be shared automatically</li>
                        </ul>
                    </div>

                    <!-- Emergency Contacts -->
                    <div class="w-full">
                        <div class="flex items-center justify-between mb-3">
                            <h3 class="font-semibold text-gray-800 flex items-center">
                                <i class="fas fa-users mr-2"></i>
                                Emergency Contacts
                            </h3>
                            <button onclick="showAddContactModal()" 
                                class="text-green-600 hover:text-green-700 transition text-sm font-semibold">
                                <i class="fas fa-plus-circle mr-1"></i>Add Contact
                            </button>
                        </div>
                        <div id="guardiansList" class="space-y-2">
                            <div class="text-gray-500 text-sm text-center py-4">
                                Loading your emergency contacts...
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column - Map & Info -->
            <div class="space-y-6">
                <!-- Map -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="font-semibold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-map text-green-600 mr-2"></i>
                        Your Current Location
                    </h3>
                    <div id="map"></div>
                    <div id="addressDisplay" class="mt-4 text-sm text-gray-600">
                        <i class="fas fa-location-arrow mr-2"></i>
                        <span id="addressText">Locating...</span>
                    </div>
                </div>

                <!-- Active Emergency (if any) -->
                <div id="activeEmergencyCard" class="hidden bg-red-50 border-2 border-red-300 rounded-xl shadow-lg p-6">
                    <h3 class="font-semibold text-red-800 mb-4 flex items-center">
                        <i class="fas fa-siren-on mr-2 animate-pulse"></i>
                        Active Emergency Alert
                    </h3>
                    <div id="emergencyDetails" class="space-y-3">
                        <!-- Details will be populated here -->
                    </div>
                    <button 
                        onclick="cancelEmergency()" 
                        class="mt-4 w-full bg-gray-600 hover:bg-gray-700 text-white py-2 px-4 rounded-lg transition">
                        <i class="fas fa-times mr-2"></i>
                        Cancel Alert (False Alarm)
                    </button>
                </div>

                <!-- Safety Tips -->
                <div class="bg-white rounded-xl shadow-lg p-6">
                    <h3 class="font-semibold text-gray-800 mb-3 flex items-center">
                        <i class="fas fa-shield-alt text-blue-600 mr-2"></i>
                        Safety Tips
                    </h3>
                    <ul class="text-sm text-gray-700 space-y-2">
                        <li class="flex items-start">
                            <i class="fas fa-check text-green-500 mr-2 mt-1"></i>
                            <span>Stay calm and in a safe location if possible</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check text-green-500 mr-2 mt-1"></i>
                            <span>Keep your phone charged and with you</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check text-green-500 mr-2 mt-1"></i>
                            <span>Share ride details with family before traveling</span>
                        </li>
                        <li class="flex items-start">
                            <i class="fas fa-check text-green-500 mr-2 mt-1"></i>
                            <span>Call local emergency services (112) if needed</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Emergency Contact Modal -->
<div id="addContactModal" class="hidden fixed inset-0 bg-black bg-opacity-75 z-50 flex items-center justify-center p-4">
    <div class="bg-white rounded-2xl max-w-md w-full shadow-2xl">
        <div class="p-6 border-b border-gray-200">
            <div class="flex items-center justify-between">
                <h2 class="text-2xl font-bold text-gray-800 flex items-center">
                    <i class="fas fa-user-plus text-green-600 mr-3"></i>
                    Add Emergency Contact
                </h2>
                <button onclick="closeAddContactModal()" class="text-gray-400 hover:text-gray-600">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
        </div>
        
        <form id="addContactForm" class="p-6">
            <div class="space-y-4">
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Name <span class="text-red-600">*</span>
                    </label>
                    <input type="text" id="contactName" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                        placeholder="Enter contact name">
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Relationship
                    </label>
                    <select id="contactRelationship"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent">
                        <option value="">Select relationship</option>
                        <option value="Parent">Parent</option>
                        <option value="Spouse">Spouse</option>
                        <option value="Sibling">Sibling</option>
                        <option value="Friend">Friend</option>
                        <option value="Relative">Relative</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Email <span class="text-red-600">*</span>
                    </label>
                    <input type="email" id="contactEmail" required
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                        placeholder="contact@example.com">
                </div>
                
                <div>
                    <label class="block text-sm font-semibold text-gray-700 mb-2">
                        Phone Number
                    </label>
                    <input type="tel" id="contactPhone"
                        class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500 focus:border-transparent"
                        placeholder="+1234567890">
                </div>
                
                <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
                    <p class="text-yellow-800 text-sm flex items-start">
                        <i class="fas fa-info-circle mr-2 mt-0.5"></i>
                        <span>This contact will receive emergency alerts via email when you trigger SOS.</span>
                    </p>
                </div>
            </div>
            
            <div class="flex space-x-3 mt-6">
                <button type="button" onclick="closeAddContactModal()" 
                    class="flex-1 bg-gray-600 hover:bg-gray-700 text-white py-3 px-6 rounded-lg transition font-semibold">
                    Cancel
                </button>
                <button type="submit" 
                    class="flex-1 bg-green-600 hover:bg-green-700 text-white py-3 px-6 rounded-lg transition font-semibold">
                    <i class="fas fa-save mr-2"></i>Save Contact
                </button>
            </div>
        </form>
    </div>
</div>

<!-- Leaflet JS -->
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script src="/js/sos.js?v=<%= Date.now() %>"></script>

