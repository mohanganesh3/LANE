<!DOCTYPE html>
<html>
<head>
    <title>SOS Test</title>
</head>
<body>
    <h1>SOS Emergency Test</h1>
    <button onclick="testAPI()">Test Load Emergencies</button>
    <pre id="output"></pre>
    
    <script>
        console.log('âœ… Script loaded');
        
        async function testAPI() {
            const output = document.getElementById('output');
            output.textContent = 'Loading...';
            
            try {
                console.log('Calling /sos/admin/all...');
                const response = await fetch('/sos/admin/all');
                console.log('Response status:', response.status);
                
                const data = await response.json();
                console.log('Data:', data);
                
                output.textContent = JSON.stringify(data, null, 2);
            } catch (error) {
                console.error('Error:', error);
                output.textContent = 'ERROR: ' + error.message;
            }
        }
        
        // Auto-run on load
        document.addEventListener('DOMContentLoaded', () => {
            console.log('DOM loaded, calling testAPI...');
            testAPI();
        });
    </script>
</body>
</html>
