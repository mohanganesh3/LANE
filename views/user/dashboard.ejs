<%- include('../partials/header') %>

<div class="pt-20 pb-12 bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4">
        <!-- Welcome Header -->
        <div class="bg-gradient-to-r from-primary to-green-600 rounded-2xl shadow-lg p-8 mb-8 text-white">
            <div class="flex items-center justify-between">
                <div>
                    <h1 class="text-3xl font-bold mb-2">Welcome back, <%= user.name %>! ðŸ‘‹</h1>
                    <p class="opacity-90">
                        <% if (user.role === 'RIDER') { %>
                            Ready to share your ride?
                        <% } else { %>
                            Ready to find your next ride?
                        <% } %>
                    </p>
                </div>
                <div class="hidden md:block">
                    <% if (user.role === 'RIDER') { %>
                        <a href="/rides/post" class="bg-white text-primary hover:bg-gray-100 px-6 py-3 rounded-lg font-semibold transition">
                            <i class="fas fa-plus-circle mr-2"></i> Post New Ride
                        </a>
                    <% } else { %>
                        <a href="/rides/search" class="bg-white text-primary hover:bg-gray-100 px-6 py-3 rounded-lg font-semibold transition">
                            <i class="fas fa-search mr-2"></i> Find Rides
                        </a>
                    <% } %>
                </div>
            </div>
        </div>

        <!-- Stats Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
            <!-- Stat Card 1 -->
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm mb-1">
                            <% if (user.role === 'RIDER') { %>Total Rides<% } else { %>Total Bookings<% } %>
                        </p>
                        <p class="text-3xl font-bold text-gray-800">
                            <%= user.role === 'RIDER' ? stats.totalRides : stats.totalBookings %>
                        </p>
                    </div>
                    <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-route text-blue-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <!-- Stat Card 2 -->
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm mb-1">Completed</p>
                        <p class="text-3xl font-bold text-gray-800">
                            <%= user.role === 'RIDER' ? stats.completedRides : stats.completedBookings %>
                        </p>
                    </div>
                    <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-check-circle text-green-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <!-- Stat Card 3 -->
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm mb-1">
                            <% if (user.role === 'RIDER') { %>Earnings<% } else { %>Spent<% } %>
                        </p>
                        <p class="text-3xl font-bold text-gray-800">
                            â‚¹<%= (user.role === 'RIDER' ? stats.totalEarnings : stats.totalSpent).toLocaleString() %>
                        </p>
                    </div>
                    <div class="w-12 h-12 bg-yellow-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-wallet text-yellow-600 text-xl"></i>
                    </div>
                </div>
            </div>

            <!-- Stat Card 4 -->
            <div class="bg-white rounded-xl shadow-md p-6">
                <div class="flex items-center justify-between">
                    <div>
                        <p class="text-gray-600 text-sm mb-1">Rating</p>
                        <div class="flex items-center">
                            <p class="text-3xl font-bold text-gray-800 mr-2"><%= stats.rating.toFixed(1) %></p>
                            <div class="text-yellow-400 flex">
                                <% for(let i = 1; i <= 5; i++) { %>
                                    <% if(i <= Math.floor(stats.rating)) { %>
                                        <i class="fas fa-star"></i>
                                    <% } else if(i - 0.5 <= stats.rating) { %>
                                        <i class="fas fa-star-half-alt"></i>
                                    <% } else { %>
                                        <i class="far fa-star"></i>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                    <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                        <i class="fas fa-star text-purple-600 text-xl"></i>
                    </div>
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
            <!-- Upcoming Trips -->
            <div class="lg:col-span-2">
                <div class="bg-white rounded-xl shadow-md p-6">
                    <div class="flex items-center justify-between mb-6">
                        <h2 class="text-2xl font-bold text-gray-800">
                            <% if (user.role === 'RIDER') { %>Upcoming Rides<% } else { %>Upcoming Bookings<% } %>
                        </h2>
                        <a href="<% if (user.role === 'RIDER') { %>/rides/my-rides<% } else { %>/bookings/my-bookings<% } %>" 
                           class="text-primary hover:text-green-600 text-sm font-semibold">
                            View All <i class="fas fa-arrow-right ml-1"></i>
                        </a>
                    </div>

                    <% if (upcomingTrips.length === 0) { %>
                        <div class="text-center py-12">
                            <i class="fas fa-calendar-times text-gray-300 text-6xl mb-4"></i>
                            <p class="text-gray-600 mb-4">No upcoming trips</p>
                            <a href="<% if (user.role === 'RIDER') { %>/rides/post<% } else { %>/rides/search<% } %>" 
                               class="bg-primary hover:bg-green-600 text-white px-6 py-2 rounded-lg transition inline-block">
                                <% if (user.role === 'RIDER') { %>Post a Ride<% } else { %>Find Rides<% } %>
                            </a>
                        </div>
                    <% } else { %>
                        <div class="space-y-4">
                            <% upcomingTrips.slice(0, 3).forEach(trip => { %>
                                <% const ride = user.role === 'RIDER' ? trip : trip.ride; %>
                                <div class="border border-gray-200 rounded-lg p-4 hover:shadow-md transition">
                                    <div class="flex items-start justify-between">
                                        <div class="flex-1">
                                            <div class="flex items-center space-x-2 mb-2">
                                                <span class="badge badge-success">Active</span>
                                                <span class="text-sm text-gray-500">
                                                    <%= new Date(ride.departureTime).toLocaleDateString() %>
                                                </span>
                                            </div>
                                            <div class="flex items-center space-x-3 mb-3">
                                                <div class="text-center">
                                                    <div class="text-lg font-bold text-gray-800"><%= ride.origin.city %></div>
                                                </div>
                                                <div class="flex-1">
                                                    <i class="fas fa-arrow-right text-primary"></i>
                                                </div>
                                                <div class="text-center">
                                                    <div class="text-lg font-bold text-gray-800"><%= ride.destination.city %></div>
                                                </div>
                                            </div>
                                            <div class="flex items-center space-x-4 text-sm text-gray-600">
                                                <span><i class="fas fa-clock mr-1"></i> <%= new Date(ride.departureTime).toLocaleTimeString('en-IN', {hour: '2-digit', minute: '2-digit'}) %></span>
                                                <% if (user.role === 'RIDER') { %>
                                                    <span><i class="fas fa-users mr-1"></i> <%= ride.bookings.length %> passengers</span>
                                                <% } else { %>
                                                    <span><i class="fas fa-user mr-1"></i> <%= trip.seats %> seat(s)</span>
                                                <% } %>
                                            </div>
                                        </div>
                                        <a href="<% if (user.role === 'RIDER') { %>/rides/<%= ride._id %><% } else { %>/bookings/<%= trip._id %><% } %>" 
                                           class="bg-primary hover:bg-green-600 text-white px-4 py-2 rounded-lg transition text-sm">
                                            View Details
                                        </a>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    <% } %>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="space-y-6">
                <!-- Carbon Footprint -->
                <div class="bg-gradient-to-br from-green-50 to-teal-50 rounded-xl shadow-md p-6">
                    <h3 class="text-lg font-bold text-gray-800 mb-4 flex items-center">
                        <i class="fas fa-leaf text-green-600 mr-2"></i>
                        Carbon Impact
                    </h3>
                    <div class="text-center mb-4">
                        <div class="text-4xl font-bold text-green-600 mb-2">
                            <%= carbonReport.totalSaved.toFixed(1) %> kg
                        </div>
                        <p class="text-sm text-gray-600">COâ‚‚ Saved</p>
                    </div>
                    <div class="bg-white rounded-lg p-4 space-y-3">
                        <div class="flex items-center justify-between">
                            <span class="text-sm text-gray-600">Your Badge</span>
                            <span class="text-3xl"><%= carbonReport.badge.emoji %></span>
                        </div>
                        <p class="text-sm font-semibold text-gray-800"><%= carbonReport.badge.name %></p>
                        <div class="border-t pt-3 space-y-2 text-xs text-gray-600">
                            <div class="flex justify-between">
                                <span>ðŸŒ³ Trees Equivalent</span>
                                <strong><%= carbonReport.equivalentTrees %></strong>
                            </div>
                            <div class="flex justify-between">
                                <span>ðŸš— Total Trips</span>
                                <strong><%= carbonReport.totalTrips %></strong>
                            </div>
                            <% if (user.role === 'RIDER' && carbonReport.totalPassengersHelped > 0) { %>
                            <div class="flex justify-between">
                                <span>ðŸ‘¥ Passengers Helped</span>
                                <strong><%= carbonReport.totalPassengersHelped %></strong>
                            </div>
                            <% } %>
                        </div>
                    </div>
                </div>

                <!-- Quick Actions -->
                <div class="bg-white rounded-xl shadow-md p-6">
                    <h3 class="text-lg font-bold text-gray-800 mb-4">Quick Actions</h3>
                    <div class="space-y-3">
                        <a href="/user/profile" class="flex items-center p-3 hover:bg-gray-50 rounded-lg transition">
                            <i class="fas fa-user text-primary mr-3"></i>
                            <span class="text-gray-700">Edit Profile</span>
                        </a>
                        <a href="/user/trip-history" class="flex items-center p-3 hover:bg-gray-50 rounded-lg transition">
                            <i class="fas fa-history text-primary mr-3"></i>
                            <span class="text-gray-700">Trip History</span>
                        </a>
                        <a href="/chat" class="flex items-center p-3 hover:bg-gray-50 rounded-lg transition">
                            <i class="fas fa-comments text-primary mr-3"></i>
                            <span class="text-gray-700">Messages</span>
                        </a>
                        <a href="/user/settings" class="flex items-center p-3 hover:bg-gray-50 rounded-lg transition">
                            <i class="fas fa-cog text-primary mr-3"></i>
                            <span class="text-gray-700">Settings</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>
